{
	"manifest_version": 3,
	"name": "Change BG Color",
	"description": "Change a whole webpage or parts of it to whatever background color your want. Save your changes and re-apply them at any time.",
	"version": "1.0",
	"background": {
		"service_worker": "js/cleanup_worker.js"
	},
	"icons":{
			"16": "pics/icon16.png",
			"24": "pics/icon24.png",
			"32": "pics/icon32.png",
			"48": "pics/icon48.png",
			"128": "pics/icon128.png"
	},
	"action": {
		"default_icon":{
			"16": "pics/icon16.png",
			"24": "pics/icon24.png",
			"32": "pics/icon32.png"
		},
		"default_title": "Change Background Color",
		"default_popup": "popup/popup.html"
	},
	"host_permissions": ["https://*/*", "http://*/*"],
	"permissions": [
		"tabs", 
		"activeTab", 
		"scripting", 
		"debugger", 
		"storage", 
		"contextMenus",
		"webNavigation"
	]
}
